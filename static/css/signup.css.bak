* {
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.container {
    background-color: white;
    padding: 2em;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    width: 300px;
    text-align: center; /* Center text inside the  container */
}

h1 {
    margin-bottom: 0.5em;
    color: #007BFF; /* Company color */
}

h2 {
    margin-bottom: 1.5em;
}

.input-group {
    margin-bottom: 1em;
}

input[type="text"],
input[type="email"],
input[type="password"],
input[type="submit"] {
    width: 100%;
    padding: 0.5em;
    border: 1px solid #ccc;
    border-radius: 4px;
}

input[type="submit"] {
    background-color: #007BFF;
    color: white;
    border: none;
    cursor: pointer;
}

input[type="submit"]:hover {
    background-color: #0056b3;
}

.link-container {
    margin-top: 1em;
}

.link-container a {
    color: #007BFF; /* Change link color here */
    text-decoration: none;
}

.link-container a:hover {
    text-decoration: underline;
}
